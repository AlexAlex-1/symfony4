{%extends 'general.html.twig'%}
{%block title%}À propos de ce ticket{%endblock%}
{%block body%}
<center>
<h3>Description de ce ticket</h3>
</center>
<ul>
<li>ID: {{ticket.id}}</li>
<li>Nom: {{ticket.name}}</li>
<li>Description: {{ticket.description}}</li>
<li>Project ID: {{ticket.projectid}}</li>
<li>Assignee ID: {{ticket.assigneeid}}</li>
<li>Statut: {{ticket.status}}</li>
<li><a href="{{asset('files/'~ticket.File)}}" download>Télécharger le file</a></li>
</ul>
<a href="/projects/montrer/{{ticket.projectid}}">Revenir en arrière</a>
<a href="/projects/tickets/del/{{ticket.id}}">Supprumer ce ticket</a>
<a href="/projects/tickets/{{ticket.id}}/edit">Modifier ce ticket</a>
{%endblock%}
